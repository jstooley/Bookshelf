<%Book.all.each do |book|%>
<form method = 'POST' action ='/books/<%=book.id%>/add'>
<div class = 'book'>
  <h3>Title: <%=book.title%></h3>
  <p>Publication Date:<%=book.year_published%></p>
  <p>Author: <%=Author.find_by(id: book.author_id).name%></p>
  <p>Genre: <%=Genre.find_by(id: book.genre_id).name%></p>
</div>
<%if logged_in? && UserBook.find_by(user_id: @user.id, book_id: book.id) == nil%>
  <p>Add this book to your colection?</p>
  <input type=submit value='Add'>
<%end%>
</form>
<%end%>
